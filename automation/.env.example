# CrestaStream Test Automation - Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# Application URLs
BASE_URL=https://staging.crestastream.example.com
API_URL=https://api.staging.crestastream.example.com

# Test User Credentials
TEST_ADMIN_EMAIL=admin@crestastream.example.com
TEST_ADMIN_PASSWORD=your-admin-password
TEST_AGENT_EMAIL=agent@crestastream.example.com
TEST_AGENT_PASSWORD=your-agent-password

# API Authentication
API_KEY=your-api-key-here

# CI/CD Settings
CI=false
DEBUG=false

# Playwright Settings
PWDEBUG=0
HEADLESS=true

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Datadog Integration (Optional)
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key
